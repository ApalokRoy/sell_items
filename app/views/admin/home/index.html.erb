<% provide(:title, "Admin Home") %>
<div>
  <h1>Admin Home</h1>
  <div class="row">
    <div class="col-sm-4">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Categories Section</h3>
        </div>
        <div class="card-body">
          <%= link_to "All Categories", admin_categories_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Advertisements Section</h3>
        </div>
        <div class="card-body">
          <%= link_to "All Advertisements", admin_posts_path, class: "btn btn-primary mb-3" %>
          <%= link_to "Pending Advertisements", pending_admin_posts_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Reviews Section</h3>
        </div>
        <div class="card-body">
          <%= link_to "All Reviews", admin_reviews_path, class: "btn btn-primary mr-3" %>
          <%= link_to "Pending Reviews", pending_admin_reviews_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>