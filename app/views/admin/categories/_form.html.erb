<%= form_for [:admin, @category] do |f| %>
  <div class="form-group row">
    <%= render 'shared/error_messages', object: @category %>
  </div>

  <div class="form-group row">  
    <%= f.label :name, "Name :", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, value: (f.object.name ? f.object.name.titlecase : ''), class: 'form-control', placeholder: "Name" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_categories_path, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>