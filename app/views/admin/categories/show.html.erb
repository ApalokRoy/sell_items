<% provide(:title, @category.name.titlecase) %>
<div class="row">
  <aside class="col-md-6 col-md-offset-2">
    <section class="user_info">
      <h1><strong><%= @category.name.titlecase %></strong></h1>
      <hr>
      <h4>Number of Approved Advertisements: <%= @category.posts.approved.count %></h4>
      <h4>Number of Pending Advertisements: <%= @category.posts.yet_to_be_approved.count %></h4>
      <%= link_to "Edit Category", edit_admin_category_path(@category) %>
      <%= link_to "Delete Category", admin_category_path(@category),
                method: :delete, data: { confirm: "Are You sure?" } %>
    </section>
  </aside>
</div>