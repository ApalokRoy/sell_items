<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Buy & Sell", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Help", help_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Contact", contact_path %></li>
        
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= "Admin Panel" %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Create Category", new_admin_category_path %></li>
                <li><%= link_to "Post Approval", pending_admin_posts_path %></li>
                <li><%= link_to "Reviews Approval" , pending_admin_reviews_path %></li>
              </ul>
            </li>
          <% end %>

          <li><%= link_to "Conversations", conversations_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Update Information", edit_user_path(current_user) %></li>
              <li><%= link_to "New Advertisement" , new_user_post_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
          
      </ul>
    </nav>
  </div>
</header>