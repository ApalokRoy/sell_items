<% provide(:title, "Search Results") %>
<div>
  <% if @posts.count > 0 %>
    <h1><%="We found #{pluralize(@posts.count, "advertisement")} matching your search request."%></h1>
    <hr>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-md-3">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%= post.name.titlecase %></h3>
            </div>
            <div class="panel-body">
              <%= link_to "Show Advertisement", user_post_path(post.user_id, post.id) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <h1>Sorry, no advertisements matches your request.</h1>
  <% end %>
</div>