<% provide(:title, "My Advertisements") %>
<div>
  <h1>My Advertisements</h1>
  <div>
    <%= link_to "New Advertisement", new_user_post_path(current_user), class: "d-block text-right mb-3" %>
    <table class="table table-striped">
      <tr>
        <td><h4>Title</h4></td>
        <td><h4>Category</h4></td>
        <td><h4>Status</h4></td>
        <td colspan=3 class="text-center"><h4>Links</h4></td>
      <tr>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.name %></td>
          <td><%= post.category.name.titlecase %></td>
          <td><%= post.approved_id.nil? ? "Pending" : "Approved" %></td>
          <td><%= link_to "Show" , my_show_user_post_path(post.user_id, post) %></td>
          <td><%= link_to "Edit" , edit_user_post_path(post.user_id, post) %></td>
          <td><%= link_to "Delete" , user_post_path(post.user_id, post),
                  method: :delete, data: { confirm: "Are You sure?" } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
