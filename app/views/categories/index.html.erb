<% provide(:title, "Home") %>
<div>
  <div class = "search">
    <%= form_for :search_posts, url: search_posts_path, method: :get do |f| %>
      <div class="form-row">
        <div class="col-5">
          <%= f.text_field :name, class: "form-control", placeholder: "Search By Name" %>
        </div>
        <div class = "col-3 offset-sm-1">
          <%= f.text_field :city, class: "form-control", placeholder: "Search By Location" %>
        </div>
        <div class = "col offset-sm-2">
          <%= f.submit "Search", class: "btn btn-success form-control" %>
        </div>
      </div>
    <% end %>
  </div>
  <hr>
  <h1>All Categories</h1>
  <div class="row">
    <%= will_paginate @categories, param_name: 'categories_page' %>
      <% @categories.each do |category| %>
        <div class="col-sm-3 mb-3">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><%= category.name.titlecase %></h3>
            </div>
            <div class="card-body">
              <%= link_to "Show Category", category_path(category) %>
            </div>
          </div>
        </div>
      <% end %>
    <%= will_paginate @categories, param_name: 'categories_page' %>
  </div>
</div>