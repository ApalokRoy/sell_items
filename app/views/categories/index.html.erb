<% provide(:title, "Home") %>
<div>
  <h1>All Categories</h1>
  <div>
    <%= will_paginate @categories, param_name: 'categories_page' %>
      <ul class="users">
        <% @categories.each do |category| %>
          <li>
            <strong><%= category.name.titlecase %></strong>
            <%= link_to "Show Category", category_path(category) %>
            <% if current_user && current_user.admin? %>
              <%= link_to "Edit Category", edit_admin_category_path(category) %>
              <%= link_to "Delete Category", admin_category_path(category),
                  method: :delete, data: { confirm: "Are You sure?" } %>
            <% end %>
          </li>
        <% end %>
      </ul>
    <%= will_paginate @categories, param_name: 'categories_page' %>
  </div>
  <%= link_to "Create Category", new_admin_category_path if current_user && current_user.admin? %>
</div>
