<% provide(:title, @category.name.titlecase) %>
<div class="row">
  <aside class="col">
    <section class="user_info">
      <h1><strong><%= @category.name.titlecase %></strong></h1>
      
      <% if @posts.count > 0 %>
        <h3><%="We have #{pluralize(@posts.count, "advertisement")} under this category."%></h3>
        <hr>
        <div class="row">
          <%= will_paginate @posts, param_name: 'posts_page' %>
            <% @posts.each do |post| %>
              <div class="col-sm-3 mb-3">
                <div class="card">
                  <div class="card-header">
                    <h5 class="card-title"><%= post.name.titlecase %></h5>
                  </div>
                  <div class="card-body">
                    <%= link_to "Show Advertisement", user_post_path(post.user_id, post.id) %>
                  </div>
                </div>
              </div>
            <% end %>
          <%= will_paginate @posts, param_name: 'posts_page' %>
        </div>
      <% end %>
    </section>
  </aside>
</div>