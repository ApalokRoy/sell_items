<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="form-group row">  
        <%= f.label :email, "Enter Email :", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter Email", required: true %>
        </div>
      </div>


      <div class="form-group row">  
        <%= f.label :password, "Enter Password :", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", required: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-8 offset-sm-4">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      </div>

    <% end %>

    <section class= "social-login">
      <div class="form-group row">
        <div class="col-sm-8 offset-sm-2">
          <h4> OR </h4>
          <%= link_to image_tag("facebook-login-button", size: "160x100", alt: "Facebook Login"), "auth/facebook" %>
          <%= link_to image_tag("google-login-button", size: "160x50", alt: "Google Login"), "auth/google_oauth2" %>
        </div>
      </div>
    </section>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
